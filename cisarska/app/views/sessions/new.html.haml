%div#centered_view_with_top_space
  %div#block-login.block
    %h2= t("login_nav_link")
    %div#login_box
      - form_tag(session_path, {:class => "formtastic"}) do
        %fieldset.inputs
          %ol
            %li.string
              = label_tag 'email', t('activerecord.attributes.user.email')
              = text_field_tag 'email'
            %li.string
              = label_tag 'password', t('activerecord.attributes.user.password')
              = password_field_tag 'password'
              = link_to t('forgot_password_question'), forgot_path
            %li.string
              %label{:for => 'remember_me', :class => 'label right'}= t('remember_me_question')
              = check_box_tag 'remember_me'
        %fieldset.buttons
          %ol
            %li.commit
              = submit_tag t("login_nav_link"), :class => 'button', :id => 'session_start_button', :alt => 'Вхід'